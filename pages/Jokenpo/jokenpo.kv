#:import utils kivy.utils
#:import date datetime.date
#:import back_games pages.back_games

FloatLayout:

    MDRectangleFlatIconButton:
        id: btn_back
        md_bg_color: utils.get_color_from_hex('#D9D9D9')
        pos_hint: {'center_x': 0.05, 'center_y': 0.9}
        on_press: back_games(app, app.capture, app.clock)

        Image:
            source: "icons/arrow-back.png"
            size_hint: None, None
            size: dp(60), dp(60)
            pos_hint: {'center_x': 0.5, 'y': 0.3}

    MDRaisedButton:
        id: btn_play
        text: "JOGAR"
        theme_text_color: "Custom"
        text_color: utils.get_color_from_hex('#2F2F2F')
        font_name: "fonts/Rajdhani-Bold.ttf"
        font_size: 18
        md_bg_color: utils.get_color_from_hex('#D9D9D9')
        size_hint: None, None
        pos_hint: {'x': 0.04, 'y': 0.5}
        on_release: app.start_game()

    MDLabel:
        id: lbl_timer
        text: ""
        theme_text_color: "Custom"
        text_color: utils.get_color_from_hex('#2F2F2F')
        font_name: "fonts/Rajdhani-Regular.ttf"
        font_size: 18
        bold: True
        width: 100
        size_hint: None, None
        halign: "center"
        pos_hint: {'x': 0.03, 'y': 0.3}

    MDLabel:
        id: lbl_fps
        text: ""
        theme_text_color: "Custom"
        text_color: utils.get_color_from_hex('#2F2F2F')
        font_name: "fonts/Rajdhani-Regular.ttf"
        font_size: 18
        bold: True
        width: 100
        size_hint: None, None
        halign: "center"
        pos_hint: {'x': 0.84, 'y': 0.65}

    BoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        width: root.width
        halign: "center"
        pos_hint: {'x': 0.33, 'center_y': 0.7}

        Image:
            size_hint: None, None
            width: 64
            height: 64
            source: "icons/jokenpo.png"
            halign: "center"
            pos_hint: {'center_x': 0.5, 'y': 0.95}

        MDLabel:
            text: "Jokenpô"
            theme_text_color: "Custom"
            text_color: utils.get_color_from_hex('#2F2F2F')
            font_name: "fonts/Rajdhani-Regular.ttf"
            font_size: 48
            bold: True
            width: 200
            size_hint: None, None
            halign: "center"
            padding: 8, 0
            pos_hint: {'center_x': 0.5, 'y': 0.8}

    MDLabel:
        id: lbl_winner
        text: ""
        font_name: "fonts/Rajdhani-Regular.ttf"
        theme_text_color: "Custom"
        text_color: utils.get_color_from_hex('#E58E0B')
        font_size: 24
        font_weight: "bold"
        size_hint: None, None
        width: root.width
        halign: "center"
        pos_hint: {'center_x': 0.5, 'y': 0.02}

    MDLabel:
        text: f"Copyright © { date.today().year } Hand Games. Todos os direitos reservados."
        theme_text_color: "Custom"
        text_color: utils.get_color_from_hex('#2F2F2F')
        font_name: "fonts/Rajdhani-Regular.ttf"
        font_size: 12
        size_hint: None, None
        width: root.width
        halign: "center"
        pos_hint: {'center_x': 0.5, 'y': -.03}